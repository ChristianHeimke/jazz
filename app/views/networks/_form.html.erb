<%= form_for(@network) do |f| %>
  <% if @network.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@network.errors.count, "error") %> prohibited this network from being saved:</h2>

      <ul>
      <% @network.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
    e.g.   176.0.369.526
  </div>
  <div class="field">
    Subnetmask:<br/>
    255.255.255.<%= f.text_field :maske %>

  </div>
  <div class="field">
    <%= f.label :broadcast %><br />
    <%= f.text_field :broadcast %>
    e.g. 176.9.169.363
  </div>
  <div class="field">
    <%= f.label :gateway %><br />
    <%= f.text_field :gateway %>
    e.g. 176.9.0.3
  </div>
  <div class="actions">
    <%= f.submit %>

  </div>
<% end %>
